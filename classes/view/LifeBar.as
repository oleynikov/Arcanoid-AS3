package classes.view {

	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	//
	//	ИМПОРТ ПАКЕТОВ
	//
	import flash.display.Sprite;
	import flash.text.TextField;
	import flash.text.TextFieldAutoSize;
	
	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
	//
	//	ПЛАТФОРМА
	//
	public class LifeBar extends Sprite {
	
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		//
		//		СВОЙСТВА КЛАССА
		//
		private var lb_lifesLeftText:TextField;
		
		//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		//
		//		КОНСТРУКТОР КЛАССА
		//
		public function LifeBar	():void {
			this.lb_lifesLeftText = new TextField();
			this.lb_lifesLeftText.autoSize = TextFieldAutoSize.LEFT;
			this.lb_lifesLeftText.textColor = 0xACACAC;
			this.addChild(this.lb_lifesLeftText);
		}		

		//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
		//
		//		Обновить число оставшихся жизней
		//
		public function LifesLeftUpdate	(lb_numberOfLifes:uint): void {
			this.lb_lifesLeftText.text = lb_numberOfLifes.toString();
		}
	}
}